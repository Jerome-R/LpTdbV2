{% extends "AppBundle::layout.html.twig" %}

{% block content %}
	<h3>Liste des boutiques / DR / Marque</h3>
	<table>
		<tr>
			<th style="padding:5px;">ID</th>
			<th style="padding:5px;">Nom</th>
			<th style="padding:5px;">Email</th>
			<th style="padding:5px;">Cr√©e le</th>
		</tr>
		{% for boutique in users %}	
			{% if boutique.id != 1 and boutique.id != 12 %}
			<tr>
				<td style="padding:5px;">{{ boutique.id }}</td>
				<td style="padding:5px;"><a target="_blank" href="{{ path('app_kpi_week', { 'user_actuel' : boutique.id } ) }}">{{boutique.username }}</a></td>
				<td style="padding:5px;">{{ boutique.email }}</td>
				<td style="padding:5px;">{{ boutique.createdAt|date('d/m/Y') }}</td>
			</tr>
		{% endif %}
		{% endfor %}
	</table>
{% endblock %}

{% block layout %}
    <div class="home-layout"></div>
{% endblock %}